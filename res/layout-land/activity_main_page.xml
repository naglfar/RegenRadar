<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:background="@color/black" >


	<de.naglfar.regenradar.TouchImageView
		android:id="@+id/regen_imageView"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		android:contentDescription="@string/radarimage" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/regen_textView"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:layout_marginRight="20dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/white" />

		<de.naglfar.regenradar.VerticalSeekBar
			android:id="@+id/regen_seekBar"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1" />

		<ImageButton
			android:id="@+id/regen_btn_playpause"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/transparent"
			android:src="@drawable/ic_play"
			android:contentDescription="@string/play" />

	</LinearLayout>

</LinearLayout>
